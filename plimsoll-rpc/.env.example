# Copy to .env and fill in your values
# ============================================================

# Required: Upstream Ethereum RPC URL
PLIMSOLL_UPSTREAM_RPC=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY

# Fee configuration (1-2 bps recommended)
PLIMSOLL_FEE_BPS=2
PLIMSOLL_FEE_COLLECTOR=0xYourFeeCollectorAddress

# Physics constraints
PLIMSOLL_MAX_LOSS_PCT=20.0
PLIMSOLL_BLOCK_APPROVALS=true

# MEV protection (disable for testnet)
PLIMSOLL_FLASHBOTS_ENABLED=false
PLIMSOLL_FLASHBOTS_RELAY=https://relay.flashbots.net

# Server binding
PLIMSOLL_HOST=0.0.0.0
PLIMSOLL_PORT=8545

# Fork block (0 = latest)
PLIMSOLL_FORK_BLOCK=0

# Logging
RUST_LOG=plimsoll_rpc=info,tower_http=debug
